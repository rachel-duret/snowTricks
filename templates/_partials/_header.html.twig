<header class="m-1">
	<nav class="navbar navbar-expand-lg bg-dark bg-gradient bg-opacity-25 ">
		<div class="container-fluid d-flex justify-content-between">
			<a class="navbar-brand" href="{{path('app_home')}}">Snow Tricks</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="{{path('app_home')}}">Home</a>
					</li>
					{% if app.user and app.user.isverified %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_create')}}">Create Tricks</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_register')}}">Register</a>
						</li>
					{% endif %}


					<li class="nav-item">
						<a class="nav-link" href="{{path (app.user ? 'app_logout' : 'app_login')}}">
							{{app.user? 'Logout' : 'Login'}}
						</a>
					</li>
					{% if app.user %}
						<li class="nav-item">
							<div class="row">
								<div class="col">
									<a class="nav-link text-capitalize" href="{{path('app_profile', {id:app.user.id, username:app.user.username})}}">
										{% if app.user.image %}
											<img src="{{app.user.image}}" class="rounded-circle" alt="profile image" style="width:35px">
										{% else %}
											<i class="bi bi-person-circle"></i>
										{% endif %}
										<strong>{{app.user.username}}</strong>

									</a>
								</div>
							</div>

						</li>
					{% endif %}


				</ul>

			</div>
		</div>
	</nav>
</header>
